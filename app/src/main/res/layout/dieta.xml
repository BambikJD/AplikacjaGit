<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/purple_200"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/WyswietlDodaneLayout"
        android:layout_width="409dp"
        android:layout_height="689dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NawigacjaLayout">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/NawigacjaLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/ProfilButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/green_700"
            android:text="Profil"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp" />

        <Button
            android:id="@+id/DietaButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/green_50"
            android:text="Dieta"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp" />

        <Button
            android:id="@+id/HomeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/green_700"
            android:text="Home"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp" />

        <Button
            android:id="@+id/TreningButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/green_700"
            android:text="Trening"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp" />

        <Button
            android:id="@+id/LodowkaButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/green_700"
            android:text="LodÃ³wka"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/DodajProduktLayout"
        android:layout_width="409dp"
        android:layout_height="689dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NawigacjaLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/green_200"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:src="@drawable/cofnij40px" />

            <TextView
                android:id="@+id/DataDnia"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2025-07-25"
                android:textSize="23sp" />

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="80dp"
                android:src="@drawable/cofnij40pxprawo"
                android:text="Button" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/widokProdukty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/produkt_item" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>