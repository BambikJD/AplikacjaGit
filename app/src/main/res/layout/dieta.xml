            android:textColor="#000000"
            android:textSize="12sp" />

        <Button
            android:id="@+id/LodowkaButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/green_700"
