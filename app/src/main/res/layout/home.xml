<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/purple_200"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/ProfilButton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="Profil"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/DietaButton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="Dieta"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/ProfilButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/TreningButton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="Trening"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/DietaButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/LodowkaButton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="LodÃ³wka"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/TreningButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/StatystykiButton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="Statystyki i znajomi"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/LodowkaButton"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>