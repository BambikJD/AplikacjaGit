<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background_color"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/NawigacjaLayout"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/ProfilButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/button_color"
            android:src="@drawable/profil"
            android:textAlignment="center"
            android:textColor="#000000"/>

        <ImageButton
            android:id="@+id/DietaButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/button_color"
            android:textAlignment="center"
            android:src="@drawable/dieta"
            android:textColor="#000000" />

        <ImageButton
            android:id="@+id/HomeButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/button_color"
            android:src="@drawable/home"
            android:textAlignment="center"
            android:textColor="#000000" />

        <ImageButton
            android:id="@+id/TreningButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/button_color"
            android:src="@drawable/trening"
            android:textAlignment="center"
            android:textColor="#000000"/>

        <ImageButton
            android:id="@+id/LodowkaButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/button_color"
            android:src="@drawable/lodowka"
            android:textAlignment="center"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:id="@+id/gornyNapis"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/green_400"
            android:text="H O M E"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/black">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/podsumowanie"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/grey_850"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/NawigacjaLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/sumaKaloriiText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textColor="@color/white_50"
            android:gravity="center"
            android:text="Kcal:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sumaBialekText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white_50"
            android:layout_weight="2"
            android:gravity="center"
            android:text="B:" />

        <TextView
            android:id="@+id/sumaWeglowodanowText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white_50"
            android:layout_weight="2"
            android:gravity="center"
            android:text="W:" />

        <TextView
            android:id="@+id/sumaTluszczyText"
            android:textColor="@color/white_50"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="T:" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>