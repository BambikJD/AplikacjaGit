<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/green_500"
    android:layout_height="wrap_content"
    android:layout_marginVertical="1dp"
    app:cardBackgroundColor="@color/grey_600">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="48dp"
        android:padding="0dp">

        <TextView
            android:id="@+id/nazwa"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:layout_marginLeft="6dp"
            android:gravity="center_vertical"
            android:text="Nazwa" />

        <LinearLayout
            android:id="@+id/kalorycznoscInfo"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/UsunButton"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/kalorycznosc"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="20dp"
                android:layout_alignParentEnd="false"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:text="kalorycznosc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/bialka"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="B" />

                <TextView
                    android:id="@+id/weglowodany"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="W" />

                <TextView
                    android:id="@+id/tluszcze"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="T" />
            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/UsunButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/grey_600"
            android:src="@drawable/ikonausun" />

        <TextView
            android:id="@+id/iloscGram"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginEnd="20dp"
            android:text="100g"
            android:layout_toStartOf="@+id/kalorycznoscInfo"
            android:ems="10"
            android:inputType="number" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
