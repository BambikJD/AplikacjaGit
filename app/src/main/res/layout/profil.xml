<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/purple_200"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/PowrotButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/teal_700"
            android:text="Powrót"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/DaneLogowania"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/black_26"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@+id/WylogujButton"
            app:layout_constraintStart_toEndOf="@+id/PowrotButton"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/WylogujButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/teal_700"
            android:text="Wyloguj"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="689dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" >

        <EditText
            android:id="@+id/EdytujImie"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:enabled="false"
            android:hint="Zmień imię"
            android:inputType="text" />

        <EditText
            android:id="@+id/EdytujNazwisko"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:enabled="false"
            android:ems="10"
            android:hint="Zmień Nazwisko"
            android:inputType="text" />

        <EditText
            android:id="@+id/EdytujEmail"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:enabled="false"
            android:ems="10"
            android:hint="Zmień email"
            android:inputType="text" />

        <EditText
            android:id="@+id/EdytujTelefon"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:enabled="false"
            android:ems="10"
            android:hint="Zmień numer telefonu"
            android:inputType="text" />

        <EditText
            android:id="@+id/EdytujAdres"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:enabled="false"
            android:ems="10"
            android:hint="Zmień adres"
            android:inputType="text" />

        <Button
            android:id="@+id/EdytujButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Edytuj" />

        <Button
            android:id="@+id/ZatwierdzButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Zatwierdź" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>